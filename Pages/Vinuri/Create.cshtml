@page
@model Crama_Dacia_ASP.NET.Pages.Vinuri.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Vin</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Vin.Nume" class="control-label"></label>
                <input asp-for="Vin.Nume" class="form-control" />
                <span asp-validation-for="Vin.Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vin.Sortiment" class="control-label"></label>
                <input asp-for="Vin.Sortiment" class="form-control" />
                <span asp-validation-for="Vin.Sortiment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vin.Pret" class="control-label"></label>
                <input asp-for="Vin.Pret" class="form-control" />
                <span asp-validation-for="Vin.Pret" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vin.ProductieDate" class="control-label"></label>
                <input asp-for="Vin.ProductieDate" class="form-control" />
                <span asp-validation-for="Vin.ProductieDate" class="textdanger"></span>
            </div>
            <label asp-for="Vin.SoiID" class="control-label">Nume Soi</label>
            <select asp-for="Vin.SoiID" class="form-control" asp-items="ViewBag.SoiID">
            </select>
            <span asp-validation-for="Vin.SoiID" class="text-danger"></span>
            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                foreach (var cat in Model.AlegeTipDataList)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedTipuri"
                                               value="@cat.TipID"
                                               @(Html.Raw(cat.Alege ? "checked=\"checked\"" : "")) />
                                        @cat.TipID @: @cat.Nume
                                    @:</td>
                                }
                            @:</tr>
                            }
                        </table>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
